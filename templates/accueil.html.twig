{% extends 'base.html.twig' %}
{% block main %}

<p class="date">Date du jour : {{ "now"|date('d/m/Y') }}</p>
    <p class="part">Participant : {{ app.user.nom }}</p>
    <div class="filtre">
    <h4>Filtrer les sorties</h4>
        <label for="le_nom">Ville</label>
        <select name="filtreVille">
            <option>New York </option>
            <option>Bucharest</option>
            <option>Madrid</option>
        </select>

        </div>


    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Clôture</th>
            <th scope="col">Inscrits/Places</th>
            <th scope="col">Etat</th>
            <th scope="col">Inscrit</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for Sortie in sortie %}
        <tr>
            <th class="table-light">{{ Sortie.nom }}</th>
            <td class="table-light">{{ Sortie.dateHeureDebut   |date("d/m/Y H:m") }}</td>
            <td class="table-light">{{ Sortie.dateLimiteInscription|date("d/m/Y") }}</td>
            <td class="table-light"></td>
            <td class="table-light"></td>
            <td class="table-light"></td>
            <td class="table-light"></td>
            <td class="table-light"><a href="{{ path('afficher_sortie', {id: Sortie.id}) }}"><button type="button" class="btn btn-success">Afficher</button></a>
                <a href="{{ path('modifierSortie', {id: Sortie.id}) }}"><button type="button" class="btn btn-warning">Modifier</button></a>
                <a href="{{ path('supprimerSortie', {id: Sortie.id}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a><br>
                <a href="{{ path('addInscription', {sortie_id: Sortie.id}) }}"> <button type="submit" class="btn btn-primary">S'inscrire / Se désister</button></a>
                </td>
        </tr>
        {% endfor %}
        </tbody>

    </table>

    <a href="{{ path('create') }}"> <button type="submit" class="btn btn-primary" id="bout"> Créer une sortie</button></a>
{% endblock %}