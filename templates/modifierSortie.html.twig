{% extends 'base.html.twig' %}

{% block main %}

    <div id="formSortie">
    {%for label, messages in app.flashes%}
        {% for message in messages %}
            <div class="alert - {{ label }}">

                {{ message }}
            </div>

        {% endfor %}
    {% endfor %}
    <br>
    <h1>Modifier une sortie</h1>
    <div >
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder':"Nom de votre sortie"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.dateHeureDebut, {'attr': {'class': 'form-control', 'placeholder':"Date et heure de début de votre sortie"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.duree, {'attr': {'class': 'form-control', 'placeholder':"Durée de votre sortie"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.dateLimiteInscription, {'attr': {'class': 'form-control', 'placeholder':"Date limite d'inscription"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.nbInscriptionMax, {'attr': {'class': 'form-control', 'placeholder':"Nombre maximum de participants"}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.infosSortie, {'attr': {'class': 'form-control', 'placeholder':"Informations concernant la sortie"}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}


{% endblock %}