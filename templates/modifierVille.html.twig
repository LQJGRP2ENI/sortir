{% extends 'base.html.twig' %}

{% block main %}

    <div id="formVille">
    {%for label, messages in app.flashes%}
        {% for message in messages %}
            <div class="alert - {{ label }}">

                {{ message }}
            </div>

        {% endfor %}
    {% endfor %}
    <br>
    <h1>Modifier une ville</h1>
    <div >
    {{ form_start(formVilles) }}
    <div class="form-group">
        {{ form_row(formVilles.nom, {'attr': {'class': 'form-control', 'placeholder':"Nom de votre ville"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(formVilles.codePostal, {'attr': {'class': 'form-control', 'placeholder':"Code postal de votre ville"}}) }}
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(formVilles) }}


{% endblock %}